<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Title_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/analytics_text_view_layout_margin</item>
        <item name="android:padding">@dimen/analytics_text_view_padding</item>
        <item name="android:textSize">@dimen/analytics_text_view_text_size</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/card_view_layout_margin</item>
        <item name="cardElevation">@dimen/cardElevation</item>
    </style>

    <style name="QuestionTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:layout_marginTop">@dimen/question_margin_top</item>
    </style>

    <style name="AnswerTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/text_view_padding</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:layout_marginTop">@dimen/answer_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/answer_margin_end</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="BottomButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
